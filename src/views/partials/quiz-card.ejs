 <!-- One card -->
<% quizzes.forEach(quizz => { %>
    <div class="col-4">
        <div class="card mb-4">
            <div class="card-header">
                <h3 class="h2"><%= quizz.title %></h3>
            </div>
            <div class="card-body d-flex flex-column justify-content-between">
                <h4 class="h3"><%= quizz.description %></h4>
                <p>par <%= quizz.author.firstname %> <%= quizz.author.lastname %></p>
                <ul class="list-unstyled mb-4 p-0">
                    <% quizz.tags.forEach(tag => { %>
                        <li class="badge bg-primary"><%= tag.name %></li>
                    <% }) %>
                </ul>
                <a href="#" class="btn btn-lg btn-primary text-white">Jouer</a>
            </div>
        </div>
    </div>
<% }) %>
 